<Window x:Class="Shadertoy_to_Gamemaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shadertoy_to_Gamemaker"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="选择" Height="232" Width="268"
        ResizeMode="CanMinimize" 
        >
    <Window.Background>
        <ImageBrush x:Name="bg"/>
    </Window.Background>
    <Grid>
    <Grid Margin="0,0,68,-5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="25,25,-62,-25" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="91*"/>
                <ColumnDefinition Width="150*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
                <ui:TextBox Grid.Row="1" Margin="0,23,40,144" Grid.ColumnSpan="2" Name="t1" PlaceholderText="Shader名称"/>
                <Label Grid.Row="1" Content="Shader类型：" Margin="0,71,0,111" FontFamily="Microsoft YaHei UI" ToolTip="类型为效果，基础纹理为游戏画面；类型为效果，基础纹理为普通的黑色方形。类型不同使用坐标系有差别。"/>
            <StackPanel Grid.Row="1" Margin="0,96,0,-96" Grid.ColumnSpan="2">
                <RadioButton Content="效果" GroupName="radio_group_one" IsChecked="True" Name="r1"/>
                <RadioButton Content="图案" GroupName="radio_group_one" Name="r2"/>

            </StackPanel>

            <ui:Button  Content="下一步" Icon="{ui:SymbolIcon Symbol=ArrowCircleRight12}" Margin="10,125,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.373,-0.445" Height="30" Width="99" Grid.Column="1" Click="Button_Click"/>

        </Grid>
    </Grid>
        </Grid>
</Window>
